    "version": "0.2.0",
    "configurations": [
       
 
        {
            "name": "Python: Backend Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\icoder\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}\\icoder"  // Set CWD here
        },
        {
            "name": "Python: Virtual Envoriment",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\venv\\Scripts\\activate",
            "django": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}\\icoder"  // Set CWD here
        }
 
    ]
}